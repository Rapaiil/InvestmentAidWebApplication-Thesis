<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
		
<validators>
	<field name="user_email">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Email field is empty!</message>
		</field-validator>
		<field-validator type="email">
			<message>Invalid email! Please try again.</message>
		</field-validator>
	</field>
	<field name="user_password">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Password field is empty!</message>
		</field-validator>
		<field-validator type="regex">
			<param name="passwordregex">^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.{8,12})</param>
			<message>Password must be at least 8 to 12 characters long, contain at least one number,
					one uppercase and one lowercase letter.</message>
		</field-validator>
	</field>
	<field name="user_repassword">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Password does not match!</message>
		</field-validator>
	</field>
	
	<validator type="expression">
		<param name="passwordMatchExpression">(user_password == user_repassword)</param>
		<message>Password does not match!</message>
	</validator>
</validators>